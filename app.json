{
  "expo": {
    "name": "CERCA",
    "slug": "cerca",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D6A4F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cerca.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CERCA necesita tu ubicación para encontrar conductores cercanos y mostrarte el mapa.",
        "NSLocationAlwaysUsageDescription": "CERCA necesita tu ubicación en segundo plano para emergencias y seguimiento de viajes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D6A4F"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cerca.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE",
        "CALL_PHONE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "CERCA necesita tu ubicación para funcionar correctamente."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
